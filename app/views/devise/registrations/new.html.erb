<div id="card-chat-pseudo">
  <p>Choisi ton pseudo</p>
</div>
<div>
  <%= image_tag 'informafion.png', id: "img-fion-small" %>
</div>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <div class="form-inputs">
    </div>
    <%= f.input :pseudo,
                required: true,
                label: false,
                autofocus: true,
                input_html: { autocomplete: "pseudo", class: "registration-bar" }%>
    <div id="card-chat-avatar">
      <p>Choisi ton avatar</p>
    </div>
    <div id="div-fion">
      <%= image_tag 'informafion.png', id: "img-fion-small" %>
    </div>
    <div data-controller="carousel" class="swiper-container" id="carousel" data-carousel-options-value='{ "navigation": { "nextEl": ".swiper-button-next", "prevEl": ".swiper-button-prev" } }'>
      <%= f.hidden_field :avatar %>
      <div class="swiper-wrapper">
        <div class="swiper-slide" data-value="boxer">
          <div id="boxer"></div>
        </div>
        <div class="swiper-slide" data-value="soutif">
          <div id="soutif"></div>
        </div>
        <div class="swiper-slide" data-value="seins">
          <div id="seins"></div>
        </div>
        <div class="swiper-slide" data-value="capote">
          <div id="capote"></div>
        </div>
        <div class="swiper-slide" data-value="clito">
          <div id="clito"></div>
        </div>
        <div class="swiper-slide" data-value="lèvres">
          <div id="lèvres"></div>
        </div>
        <div class="swiper-slide" data-value="teub">
          <div id="teub"></div>
        </div>
      </div>
    </div>
    <%= f.input :password,
                required: true,
                label: false,
                placeholder: 'Entre ton mot de passe',
                input_html: { autocomplete: "new-password", class: "password-bar" } %>
    <div class="btn-position">
      <%= f.button :submit, "Je m'inscris", id: "btn-principal-connection" %>
    <%= render "devise/shared/links" %>
    </div>
<% end %>

<div class="swiper-button-prev" id="swiper-button-prev"></div>
<div class="swiper-button-next" id="swiper-button-next"></div>

