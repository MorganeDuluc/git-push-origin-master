<div class="background-color marge">

  <div class="card-chat-login">
    <p>Entre tes informations !</p>
  </div>
  <%= image_tag 'informafion-1.png', class: "img-fion-small" %>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <p class="p-login negative-marge">Entre ton pseudo<p>
  <div class="form-inputs">
    <%= f.input :pseudo,
                required: false,
                label: false,
                autofocus: true,
                input_html: { autocomplete: "pseudo", class: 'input-login' } %>
    <p class="p-login negative-marge">Entre ton mot de passe<p>
    <%= f.input :password,
                required: false,
                label: false,
                input_html: { autocomplete: "current-password", class: 'input-login' } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions btn-blue-home">
    <%= f.button :submit, "Je me connecte" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
