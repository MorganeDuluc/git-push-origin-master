<%= simple_form_for @question, url: question_path(@question.id), method: :get do |f| %>
  <%= simple_fields_for :answer do |answer_f| %>
    <%= answer_f.input :response_id, as: :radio_buttons, collection: @question.responses.map {|response| [response.content, response.id]}%>
  <% end %>
    <%= f.submit "Je valide ma réponse" do %>
