<div class="background-color">

  <div class="card-search position">
    <%= link_to request.referer.present? ? request.referer : root_path do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <div class="card-chat-quiz">
      <%= image_tag 'informafion-ring.png', class: 'img-fion-quiz' %>
    </div>
  </div>

  <div class="quiz-side">
    <h3>Bienvenue dans le th√®me: <strong><%= @theme.name %></strong></h3>
    <% @quizzes.each do |quiz| %>
    <% if quiz.finished == true %>
        <div class="card-quiz-unlock">
          <% if quiz.questions.present? %>
            <% link = question_path(quiz.questions.first) %>
          <% else %>
            <% link = root_path %>
          <% end %>

          <%= link_to link do %>

            <i class="fas fa-check"></i>
            <div class="card-quiz-unlock-infos">
              <h4> <%= quiz.title %> </h4>
              <p> 5 questions - 10 minutes </p>
            </div>
          <% end %>
        </div>
    <% else %>
      <div class="card-quiz-lock">
        <% if quiz.questions.present? %>
          <% link = question_path(quiz.questions.first) %>
        <% else %>
          <% link = root_path %>
        <% end %>



          <i class="fas fa-lock"></i>
          <div class="card-quiz-lock-infos">
            <h4> <%= quiz.title %> </h4>
            <p> 5 questions - 10 minutes </p>
          </div>

      </div>
    <% end %>
    <% end %>
  </div>
</div>
